# AI Usage Detection Agent Configuration
# Copy this file to .env and update values as needed

# API Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8002

# Detection Thresholds (0.0 to 1.0)
AI_USAGE_THRESHOLD_MODERATE=0.30
AI_USAGE_THRESHOLD_QUESTIONABLE=0.60
AI_USAGE_THRESHOLD_INADEQUATE=0.80

# Feature Weights for Scoring
TEXT_AI_WEIGHT=0.30
CODE_AI_WEIGHT=0.30
STYLE_INCONSISTENCY_WEIGHT=0.20
COMPLEXITY_MISMATCH_WEIGHT=0.10
TEMPORAL_ANOMALY_WEIGHT=0.10

# Text Analysis Configuration
MIN_TEXT_LENGTH=50
MAX_PERPLEXITY_THRESHOLD=50.0

# Code Analysis Configuration
MIN_CODE_LINES=10

# AWS Configuration (for serverless deployment)
AWS_REGION=us-east-1
DYNAMODB_TABLE_ANALYSES=ai_usage_analyses
DYNAMODB_TABLE_DECLARATIONS=ai_usage_declarations

# Logging
LOG_LEVEL=INFO
